@model IEnumerable<TravelPY.Models.DanhMuc>

@{
    int soTour1N = ViewBag.soTour1N;
    int soTourDN = ViewBag.soTourDN;
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutOne.cshtml";

}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Danh sách Danh Mục : trang @ViewBag.CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminDanhMuc" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Tạo mới danh mục mới</span></a>
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã Danh Mục</th>
                        <th>Tên Danh Mục</th>
                        <th>Mô tả</th>
                        <th>Số Tour</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaDanhMuc</td>
                                <td>@item.TenDanhMuc</td>
                                <td>@item.Mota</td>
                                
                                <td>
                                    @if (@item.MaDanhMuc == 1)
                                    {
                                        @soTour1N
                                    }
                                    else if (@item.MaDanhMuc == 2)
                                    {
                                        @soTourDN
                                    }
                                </td>



                                <td>
                                    <a asp-area="Admin" asp-controller="AdminDanhMuc" asp-action="Details" asp-route-id="@item.MaDanhMuc" class="btn btn-outline-primary">Chi tiết</a>
                                    <a asp-area="Admin" asp-controller="AdminDanhMuc" asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-outline-warning">Sửa</a>
                                    <a asp-area="Admin" asp-controller="AdminDanhMuc" asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-outline-danger">Xoá</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>