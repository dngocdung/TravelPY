@model TravelPY.Models.BaiViet
@*Cần chỉnh sửa*@
@{
    ViewData["Title"] = "Tạo bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutOne.cshtml";
}
@section Styles{
    <link href="~/AdminAssetsOne/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/AdminAssetsOne/summernote/summernote.css" rel="stylesheet" />
}
<h4>Chỉnh sửa bài viết</h4>
<hr />
<div class="card-body">
    <form class="needs-validation" asp-area="Admin" asp-controller="AdminBaiViet" asp-action="Edit" asp-route-id="@Model.MaBaiViet" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaBaiViet" />
        <input type="hidden" asp-for="HinhAnh" />
        <input type="hidden" asp-for="NgayTao" />
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="TieuDe" class="control-label">Tiêu Đề</label>
                <input type="text" class="form-control" asp-for="TieuDe">
                <span asp-validation-for="TieuDe" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="MaTaiKhoan" class="control-label">Tác Giả</label>
                <select asp-for="MaTaiKhoan" class="form-control" asp-items="ViewBag.MaTaiKhoan">
                    <option value="" disabled selected>Chọn Tác Giả</option>
                </select>

            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="MaPage" class="control-label">Thuộc Page</label>
                <select asp-for="MaPage" class="form-control" asp-items="ViewBag.MaPage">
                    <option value="" disabled selected>Chọn Page</option>
                </select>

            </div>
        </div> <!-- /.form-row -->
        <div class="form-row">
            @*<div class="col-md-6 mb-3">
            <label asp-for="NgayTao" class="control-label">Ngày tạo</label>
            <input asp-for="NgayTao" class="form-control" type="datetime" />
            <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>*@
            <div class="col-md-3 mb-3">
                <label class="control-label">Hình ảnh</label>
                <input asp-for="HinhAnh" class="form-control-file" name="fHinhAnh" type="file"/>
                <span asp-validation-for="HinhAnh" class="text-danger"></span>

            </div>

            <div class="col-md-3 mx-auto mb-3">
                <label class="control-label">Trạng thái</label> </br>
                <input type="checkbox" asp-for="Publisher" data-toggle="toggle" data-on="Public" data-off="Non-Public" data-onstyle="outline-success" data-offstyle="outline-danger" data-size="xm" />
            </div>
        </div> <!-- /.form-row -->

        <div class="row mb-4">
            <div>
                <div class="card">
                    <div class="card-body">
                        <textarea class="summernote" asp-for="NoiDung"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary btn-icon-text col-md-5">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Sửa
            </button>
            <button style="float:right;" asp-area="Admin" asp-controller="AdminBaiViet" asp-action="Index" class="btn btn-outline-warning btn-icon-text col-md-5">
                <i class="mdi mdi-reload btn-icon-prepend"></i> Trở về
            </button>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/AdminAssetsOne/vendors/select2/select2.min.js"></script>
    <script src="~/AdminAssetsOne/js/pages/e-commerce-product-edit.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="~/AdminAssetsOne/summernote/summernote-bs4.js"></script>

    <script>

        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}
