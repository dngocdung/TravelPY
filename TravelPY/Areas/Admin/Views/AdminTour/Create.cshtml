@model TravelPY.Models.Tour

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutOne.cshtml";
}
@section Styles{
    <link href="~/AdminAssetsOne/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/AdminAssetsOne/summernote/summernote.css" rel="stylesheet" />
}
<h4>Thêm mới Tour</h4>
<hr />
<div class="card-body">
    <form class="needs-validation" asp-area="Admin" asp-controller="AdminTour" asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="TenTour" class="control-label">Tên Tour du lịch</label>
                <input type="text" class="form-control" asp-for="TenTour">
                <span asp-validation-for="TenTour" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="MaDanhMuc" class="control-label">Thuộc danh mục</label>
                <select asp-for="MaDanhMuc" class="form-control" asp-items="ViewBag.MaDanhMuc">
                    <option value="" disabled selected>Chọn danh mục</option>
                </select>
            </div>
        </div> <!-- /.form-row -->
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="Gia" class="control-label">Giá gốc</label>
                <input asp-for="Gia" class="form-control" type="text" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="GiaGiam" class="control-label">Giá giảm</label>
                <input asp-for="GiaGiam" class="form-control" type="text" />
                <span asp-validation-for="GiaGiam" class="text-danger"></span>
            </div>
        </div> <!-- /.form-row -->
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="PhuongTien" class="control-label">Phương tiện</label>
                <input asp-for="PhuongTien" class="form-control" type="text" />
                <span asp-validation-for="PhuongTien" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="SoCho" class="control-label">Số chỗ</label>
                <input asp-for="SoCho" class="form-control" type="number" />
                <span asp-validation-for="SoCho" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="SoNgay" class="control-label">Số ngày</label>
                <input asp-for="SoNgay" class="form-control" type="text" />
                <span asp-validation-for="SoNgay" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="NoiKhoiHanh" class="control-label">Nơi khởi hành</label>
                <input asp-for="NoiKhoiHanh" class="form-control" type="text" />
                <span asp-validation-for="NoiKhoiHanh" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="MaHdv" class="control-label">Hướng dẫn viên</label>
                <select asp-for="MaHdv" class="form-control select2" asp-items="ViewBag.MaHdv">
                    <option value="" disabled selected>Chọn hướng dẫn viên</option>
                </select>

            </div>
            <div class="col-md-3 mb-3">
                <label class="control-label">Hình ảnh</label>
                <input asp-for="HinhAnh" class="form-control-file" name="fHinhAnh" type="file" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>

            </div>
        </div>
        <div class="form-row mb-3">
            <div class="col-md-6 mb-3">
                <label asp-for="NgayKhoiHanh" class="control-label">Ngày khởi hành</label>
                <input asp-for="NgayKhoiHanh" class="form-control" type="text" />
                <span asp-validation-for="NgayKhoiHanh" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="GioKhoiHanh" class="control-label">Giờ khởi hành</label>
                <input asp-for="GioKhoiHanh" class="form-control" type="text" />
                <span asp-validation-for="GioKhoiHanh" class="text-danger"></span>
            </div>
            <div class="col-md-3 mx-auto mb-3">
                <label class="control-label">Trạng thái</label> </br>
                <input type="checkbox" asp-for="TrangThai" data-toggle="toggle" data-onstyle="outline-success" data-offstyle="outline-danger" data-size="xm" />
            </div>
        </div>
        <div class="row mb-4">
            <div>
                <div class="card">
                    <div class="card-body">
                        <textarea class="summernote" asp-for="MoTa"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary btn-icon-text col-md-5">
                <i class="mdi mdi-file-check btn-icon-prepend"></i> Tạo mới
            </button>
            <button style="float:right;" asp-area="Admin" asp-controller="AdminTour" asp-action="Index" class="btn btn-outline-warning btn-icon-text col-md-5">
                <i class="mdi mdi-reload btn-icon-prepend"></i> Trở về
            </button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/AdminAssetsOne/vendors/select2/select2.min.js"></script>
    <script src="~/AdminAssetsOne/js/pages/e-commerce-product-edit.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="~/AdminAssetsOne/summernote/summernote-bs4.js"></script>

    <script>

        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}